{
  "manifest_version": 3,
  "name": "AIParley - AI Communication Research Tool",
  "version": "1.0.0",
  "description": "Academic research tool for studying multi-agent AI communication patterns and collaboration dynamics",
  "author": "AI Research Lab",

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "alarms",
    "downloads"
  ],

  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content/claude-handler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content/chatgpt-handler.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "options/options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["shared/config.js"],
      "matches": ["https://claude.ai/*", "https://chatgpt.com/*"]
    }
  ]
}
